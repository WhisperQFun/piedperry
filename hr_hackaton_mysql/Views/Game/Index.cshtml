@model List<hr_hackaton_mysql.Models.list_game>
@{
    ViewBag.Title = "Игра";
}



@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="contenier ml-3 mt-4">
        <div class="contenier-fluid">
            <div class="container-fluid">
                <div class="row">
                    @foreach (var games in Model)
                    {
                    <div class="card" style="width: 18rem;">
                        <img class="card-img-top" height="180" width="286" src="~/Content/img/Games/@Html.Raw(games.category_name_english)&#046;jpg" alt="Card image cap ">
                        <div class="card-body">
                            <h5 class="card-title">@Html.Raw(games.category_name)</h5>
                            <p class="card-text"></p>
                            <a href="@Url.Action("Play", "Game",new {category=games.category_name_english,answer="0" ,id_game="25" , score="0" ,prev_id="0"},null)" class="btn btn-primary">Играть</a>
                        </div>

                    </div>
                    }
                </div>
            </div>
        </div>
    </div>

    





}
