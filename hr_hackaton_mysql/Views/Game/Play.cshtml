@model hr_hackaton_mysql.Models.Game

@{
    ViewBag.Title = "Игра";
}

        
<div class="bg"></div>
<div class="container-fluid bg">
    
    <div class="container">
        <p>@Model.text</p>
        <br />
        @if (Model.id != 0)
        {
            <a href="@Url.Action("Play", "Game", new { category = Model.type, answer = "1", id_game = Model.item_1, score = Model.score,prev_id=Model.id }, null)" class="btn btn-primary">@Model.chose_1</a>
            <a href="@Url.Action("Play", "Game", new { category = Model.type, answer = "2", id_game = Model.item_2, score = Model.score,prev_id=Model.id }, null)" class="btn btn-primary">@Model.chose_2</a>

        }
        else
        {
            <a href="@Url.Action("Index", "Game")" class="btn btn-primary">К списку Игр))</a>
        }


    </div>
</div>



